{
   "extends": "@doFavour/tsconfig/common.json",
   "ts-node": {
      "esm": true,
      "files": true,
      "transpileOnly": true
   },
   "compilerOptions": {
      "typeRoots": ["node_modules/@types", "types/*.d.ts", "src/**/*.d.ts"],
      "outDir": "./dist",
      "types": ["node", "jest"],
      "baseUrl": ".",
      "paths": {
         "@/*": ["src/*"],
         "domain/*": ["src/domain/*"],
         "tests/*": ["src/__tests__/*"],
         "common/*": ["src/common/*"],
         "config/*": ["src/config/*"],
         "application/*": ["src/application/*"],
         "infrastructure/*": ["src/infrastructure/*"],
         "interfaces/*": ["src/adapter/*"]
      }
   },
   "include": ["src/**/*.ts", "src/__tests__/domain/entities/.old_profile.test.ts"]
}
