{
    "name": "@dofavour/app",
    "version": "0.0.0",
    "engines": {
        "node": ">=18.0.0",
        "npm": "use yarn or pnpm",
        "pnpm": ">=8.0.0",
        "yarn": ">=1.20.0"
    },
    "husky": {
        "hooks": {
            "prepare-commit-msg": "exec < /dev/tty && npx cz --hook || true"
        }
    },
    "main": "index.js",
    "pnpm": {
        "overrides": {
            "semver@<7.5.2": ">=7.5.2"
        }
    },
    "private": true,
    "scripts": {
        "build": "turbo build",
        "clean": "turbo clean",
        "dev": "turbo dev --no-daemon",
        "format": "turbo db:format",
        "generate": "turbo db:generate",
        "lint": "turbo lint",
        "migrate": "turbo db:migrate",
        "precommit": "pnpm run --filter \"@dofavour/*\" pre-commit",
        "prepare": "husky install",
        "pretty": "turbo pretty",
        "seed": "turbo db:seed",
        "studio": "turbo db:studio",
        "test": "turbo test"
    },
    "devDependencies": {
        "cz-conventional-changelog": "3.3.0",
        "esbuild": "^0.19.5",
        "esbuild-jest": "^0.5.0",
        "eslint": "^8.53.0",
        "husky": "8.0.3",
        "jest": "^29.7.0",
        "lint-staged": "^15.1.0",
        "prettier": "^3.1.0",
        "turbo": "^1.10.16"
    }
}
